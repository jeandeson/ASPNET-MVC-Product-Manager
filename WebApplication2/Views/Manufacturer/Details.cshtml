@model WebApplication2.Models.Manufacturer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Informações de Fabricantes";
}


<div class="card">
    <div class="card-header"><h4>Detalhes do fabricante</h4></div>
    <div class="card-body">
        <dl class="row m-0">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ManufacturerId">Edit</a> 
        <a class="btn btn-warning" asp-action="Index">Back to List</a>
    </div>
</div>

@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            $('a.active').removeClass('active');
            $('a#manufacturer').addClass('active');

        });
    </script>
}
