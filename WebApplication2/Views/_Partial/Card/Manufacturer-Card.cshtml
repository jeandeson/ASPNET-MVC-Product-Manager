@model Manufacturer

<div class="card-body">
    <div class="mb-3">
        <label asp-for="Name" class="form-label mr">Nome do fabricante</label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-person fs-5"></i>
            </span>
            <input id="ManufacturerId" hidden value="@Model.ManufacturerId">
            <input id="Name" value="Name" name="Name" minlength="3" type="text" class="form-control">
        </div>
        <div class="text-danger"></div>
    </div>
</div>
<div class="card-footer">
    <input type="submit" class="btn btn-primary" />
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>