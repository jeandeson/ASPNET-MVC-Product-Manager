@model Product

<div class="card-body">
    <div class="mb-3">
        <label for="Name" class="form-label mr">Nome do produto</label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-tag-fill fs-5"></i>
            </span>
            <input asp-for="Name" id="Name" class="form-control" />
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
        <div class="mb-3">
            <label for="datepicker" class="form-label mr">Nome do produto</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-tag-fill fs-5"></i>
                </span>
               @Html.EditorFor(m => m.CreatedAt, new {htmlAttributes = new {@class = "form-control"}})

            </div>
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Categoria</label>
                <select required asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
        </div>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <div class="mb-3">
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label">Fabricante</label>
                <select required asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
            </div>
        </div>
        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
    </div>
    <div class="card-footer">
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-warning">Back to List</a>
        </div>
    </div>
</div>