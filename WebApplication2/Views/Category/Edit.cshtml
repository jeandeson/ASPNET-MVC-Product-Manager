@model Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Edição de Categorias";
}

<form asp-action="Edit" id="category-edit-form">
    <div class="card">
        <div class="card-header">
            <h4>Criar nova categoria</h4>
        </div>
        <partial name="~/Views/Partial/Card/Category-Card" for="@Model" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section ScriptPage{
    <script>
        $(document).ready(function () {
            $('a.active').removeClass('active');
            $('a#category').addClass('active');
            $.validator.setDefaults({ ignore: ":hidden" });
            $("#category-edit-form").validate(
                {
                    errorPlacement: function (error, element) {
                        error.appendTo(element.parent().siblings(':last'));
                    },
                    errorClass: "text-danger",
                    validClass: "text-success",
                });

        });
    </script>
}
