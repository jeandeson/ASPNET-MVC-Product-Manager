@model Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Edição do Produto";
}

<form asp-action="Edit" id="product-edit-form">
    <div class="card">
        <div class="card-header">
            <h4>Editar produto <span class="text-primary">@Model.Name</span></h4>
        </div>
        <partial name="~/Views/_Partial/Card/Product-Card.cshtml" for="@Model" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section ScriptPage{
    <script>
        $(document).ready(function () {
            $('a.active').removeClass('active');
            $('a#Product').addClass('active');
            $.validator.setDefaults({ ignore: ":hidden" });
            $("#product-edit-form").validate(
                {
                    errorPlacement: function (error, element) {
                        error.appendTo(element.parent().siblings(':last'));
                    },
                    errorClass: "text-danger",
                    validClass: "text-success",
                });

        });
    </script>
}


