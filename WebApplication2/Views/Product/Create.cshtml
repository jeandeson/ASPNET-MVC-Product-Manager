@model Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" id="product-create-form">
    <div class="card">
        <div class="card-header">
            <h4>Criar novo produto</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <partial name="~/Views/_Partial/Card/Product-Card.cshtml" for="@Model" />
    </div>
</form>

@section Styles {
    <link href="~/lib/jquery-ui/jquery-ui.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section ScriptPage{
    <script>
        $(document).ready(function () {
            $('a.active').removeClass('active');
            $('a#product').addClass('active');
            $.validator.unobtrusive.parse("#product-create-form");
            $("#product-create-form").validate(
                {
                    errorPlacement: function (error, element) {
                        error.appendTo(element.parent().siblings(':last'));
                    },
                    errorClass: "text-danger",
                    validClass: "text-success",
                });
        });
    </script>
}